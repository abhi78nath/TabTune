{
  "manifest_version": 3,
  "name": "TabTune",
  "description": "Media Player and Lyrics Viewer",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://music.youtube.com/*",
    "https://www.youtube.com/*",
    "https://api.lyrics.ovh/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": [
        "spotify.js"
      ]
    },
    {
      "matches": [
        "https://music.youtube.com/*"
      ],
      "js": [
        "youtube-music.js"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "youtube.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "/main-icon-48.png",
      "64": "/main-icon-64.png",
      "128": "/main-icon-128.png",
      "256": "/main-icon-256.png"
    }
  },
  "icons": {
    "48": "/main-icon-48.png",
    "64": "/main-icon-64.png",
    "128": "/main-icon-128.png",
    "256": "/main-icon-256.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}